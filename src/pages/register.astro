---
import GuestLayout from "@/layouts/GuestLayout.astro";
import RegisterForm from "@/modules/auth/components/RegisterForm";

// Check if user is already logged in
const {
  data: { user },
} = await Astro.locals.supabase.auth.getUser();
if (user) {
  return Astro.redirect("/diets");
}
---

<GuestLayout title="Rejestracja">
  <div class="container flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md mx-auto p-6 space-y-8 bg-white shadow-lg rounded-lg">
      <div class="text-center">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Utwórz nowe konto</h1>
        <p class="mt-2 text-sm text-gray-600">Wypełnij formularz aby utworzyć konto</p>
      </div>

      <RegisterForm client:load />
    </div>
  </div>
</GuestLayout>
