---
import { Toaster } from "@/components/ui/sonner";
import Layout from "@/layouts/Layout.astro";
import { DietDetailsView } from "@/modules/diet/dietaryPlan/components/DietDetailsView";

const { id } = Astro.params;

if (!id) {
  return Astro.redirect("/404");
}

const dietId = parseInt(id, 10);

if (isNaN(dietId)) {
  return Astro.redirect("/404");
}

const acceptedTerms = Astro.locals.user?.profile?.terms_accepted;

if (!acceptedTerms) {
  return Astro.redirect("/profile");
}
---

<Layout>
  <DietDetailsView client:load dietId={dietId} />
  <Toaster client:load />
</Layout>
